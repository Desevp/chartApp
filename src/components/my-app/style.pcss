.Container {
  position: relative;
  width: 100%;
  max-width: 480px;
  overflow: hidden;
}

.ChartWrapper {
  position: relative;

  &__Chart {
    margin-top: 32px;
  }
}

.Chart {
  position: relative;

  &__Canvas {
    position: relative;
    width: 100%;
    height: 300px;
    border: 1px solid  rgb(179, 179, 179);
  }

  &__Timeline {
    position: relative;
    width: 100%;
    height: 80px;
    margin-top: 24px;
    border: 1px solid rgb(179, 179, 179);
  }
}
